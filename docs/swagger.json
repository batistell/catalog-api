    },
    "version": "1.0"
  },
  "basePath": "/",
  "paths": {
    "/add": {
      "post": {
        "description": "Add a new product to the catalog",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "Products"
        ],
        "summary": "Add a new product",
        "parameters": [
          {
            "description": "Product object to add",
            "name": "product",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/handlers.Product"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/handlers.ProductResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/handlers.ErrorResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "handlers.ErrorResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "handlers.Product": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        }
      }
    },
    "handlers.ProductResponse": {
      "type": "object",
      "properties": {
        "data": {
          "$ref": "#/definitions/handlers.Product"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}